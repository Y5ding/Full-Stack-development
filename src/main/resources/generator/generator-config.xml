<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <context id="Mysql" targetRuntime="MyBatis3" defaultModelType="flat">

        <!-- check keyword -->
        <property name="autoDelimitKeywords" value="true"/>
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>

        <!--overwrite XML-->
        <plugin type="org.mybatis.generator.plugins.UnmergeableXmlMappersPlugin" />
        <!-- add toString() -->
        <plugin type="org.mybatis.generator.plugins.ToStringPlugin"/>

        <!-- not generate comment -->
        <commentGenerator>
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>

        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/wiki?serverTimezone=UTC"
                        userId="wiki"
                        password="920123">
            <property name="nullCatalogMeansCurrent" value="true" />
        </jdbcConnection>

        <!-- domain position -->
        <javaModelGenerator targetProject="src/main/java"
                            targetPackage="com.yujia.wiki_spring.domain"/>

        <!-- mapper xml position -->
        <sqlMapGenerator targetProject="src/main/resources"
                         targetPackage="mapper"/>

        <!--class mapper position-->
        <javaClientGenerator targetProject="src/main/java"
                             targetPackage="com.yujia.wiki_spring.mapper"
                             type="XMLMAPPER"/>

        <table tableName="ebook" domainObjectName="Ebook"/>

    </context>
</generatorConfiguration>
